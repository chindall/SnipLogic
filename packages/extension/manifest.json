{
  "manifest_version": 3,
  "name": "SnipLogic",
  "version": "1.0.0",
  "description": "Type a shortcut and press Tab to insert your SnipLogic snippet",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage", "tabs", "clipboardRead"],
  "host_permissions": [
    "https://sniplogic.yourdomain.com/*",
    "http://localhost:3001/*"
  ]
}
